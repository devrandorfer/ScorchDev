{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "companyPrefix": {
      "type": "string",
      "defaultValue": "sco",
      "metadata": {
        "description": "Company prefix"
      }
    },
    "vnetAddressPrefix": {
      "type": "string",
      "defaultValue": "10.0.0.0/16",
      "metadata": {
        "description": "Address prefix"
      }
    },
    "publicSubnetPrefix": {
      "type": "string",
      "defaultValue": "10.0.0.0/24",
      "metadata": {
        "description": "Public Subnet Prefix"
      }
    },
    "privateSubnetPrefix": {
      "type": "string",
      "defaultValue": "10.0.1.0/24",
      "metadata": {
        "description": "Private Subnet Prefix"
      }
    }
  },
  "variables": {
    "apiVersion": "2016-10-01",
    "Location": "[resourceGroup().location]",
    "vnetName": "[concat(parameters('companyPrefix'),'-',variables('Location'))]"
  },
  "resources": [
    {
      "apiVersion": "[variables('apiVersion')]",
      "type": "Microsoft.Network/virtualNetworks",
      "name": "[variables('vnetName')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[parameters('vnetAddressPrefix')]"
          ]
        },
        "subnets": [
          {
            "name": "public",
            "properties": {
              "addressPrefix": "[parameters('publicSubnetPrefix')]"
            }
          },
          {
            "name": "private",
            "properties": {
              "addressPrefix": "[parameters('privateSubnetPrefix')]"
            }
          }
        ]
      }
    }
  ]
}
